    "karma-mocha": "^2.0.1",
    "karma-typescript": "^5.0.3",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.10.2",
    "rollup-plugin-terser": "^5.3.0",
